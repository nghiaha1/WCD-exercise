<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.wcdexercise.wcdexercise.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateCustomerServlet</servlet-name>
        <servlet-class>com.wcdexercise.wcdexercise.controller.CreateCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCustomerServlet</servlet-name>
        <url-pattern>/admin/customers/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListCustomerServlet</servlet-name>
        <servlet-class>com.wcdexercise.wcdexercise.controller.ListCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCustomerServlet</servlet-name>
        <url-pattern>/admin/customers/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailCustomerServlet</servlet-name>
        <servlet-class>com.wcdexercise.wcdexercise.controller.DetailCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailCustomerServlet</servlet-name>
        <url-pattern>/admin/customers/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <servlet-class>com.wcdexercise.wcdexercise.controller.DeleteCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <url-pattern>/admin/customers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditStudentServlet</servlet-name>
        <servlet-class>com.wcdexercise.wcdexercise.controller.EditCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditStudentServlet</servlet-name>
        <url-pattern>/admin/customers/edit</url-pattern>
    </servlet-mapping>

</web-app>